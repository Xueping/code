<?xml version="1.0" encoding="UTF-8"?>  
<beans:beans xmlns="http://www.springframework.org/schema/security"  
    xmlns:beans="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd  
                        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.2.xsd">  
  
    <global-method-security pre-post-annotations="enabled">  
        <!-- AspectJ pointcut expression that locates our "post" method and applies security that way  
        <protect-pointcut expression="execution(* bigbank.*Service.post*(..))" access="ROLE_TELLER"/>  
        -->  
    </global-method-security>  
    <http security="none" pattern="/js/**" />
    <http security="none" pattern="/css/**" />
    <http security="none" pattern="/images/**" />
    <http auto-config="true" use-expressions="true" access-denied-page="/denied.jsp"> 
        
        <intercept-url pattern="/login*" access="permitAll" />
        <intercept-url pattern="/**" access="isAuthenticated()" />
		
		<form-login login-page="/login.jsp" 
        	always-use-default-target="true"
			authentication-success-handler-ref="successHandler"
			authentication-failure-handler-ref="failureHandler" />
		
        <logout invalidate-session="true"  
        	logout-success-url="/logout.jsp"   
      		logout-url="/logout"/>
        
        
        <remember-me />  
        <!-- Uncomment to limit the number of sessions a user can have -->  
       <!-- 
        <session-management invalid-session-url="/login.jsp">  
            <concurrency-control max-sessions="1" error-if-maximum-exceeded="true" />  
        </session-management>  
        --> 
  
    </http>  
    
    <authentication-manager alias="authenticationManager">
		<authentication-provider user-service-ref="userDetails"/>
	</authentication-manager>
	
	<!-- business of login successfully -->
	<beans:bean id="successHandler" class="uts.codesale.security.LoginAuthenticationSuccessHandler">
		<beans:property name="url" value="/dashboard.action"></beans:property>  
	</beans:bean>
	
	<!-- business of login unsuccessfully -->
	<beans:bean id="failureHandler" class="uts.codesale.security.LoginAuthenticationFailureHandler">
		<beans:property name="url" value="/login.jsp?error=true"></beans:property>  
	</beans:bean>

</beans:beans> 